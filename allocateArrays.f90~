subroutine allocateArrays
	use ptmModule
	implicit none
	if (setup%releaseType.ne.'polygon') then
		allocate(particles%dates( setup%numHoursOfTracking ))
		allocate(particles%levels( setup%numHoursOfTracking, setup%numberOfParticles * setup%numberOfReleasePoints))
		allocate(particles%lats( setup%numHoursOfTracking, setup%numberOfParticles * setup%numberOfReleasePoints ))
		allocate(particles%lons( setup%numHoursOfTracking, setup%numberOfParticles * setup%numberOfReleasePoints ))
		allocate(particles%mass( setup%numHoursOfTracking, setup%numberOfParticles * setup%numberOfReleasePoints ))
		allocate(particles%evapPercentage( setup%numHoursOfTracking, setup%numberOfParticles * setup%numberOfReleasePoints ))    
		allocate(particles%hourOfBirth( setup%numberOfParticles * setup%numberOfReleasePoints ))        
		particles%numOfExistingParticles = 0
    else
		allocate(particles%dates( setup%numHoursOfTracking ))
		allocate(particles%levels( setup%numHoursOfTracking, setup%numberOfParticles))
		allocate(particles%lats( setup%numHoursOfTracking, setup%numberOfParticles))
		allocate(particles%lons( setup%numHoursOfTracking, setup%numberOfParticles))
		allocate(particles%mass( setup%numHoursOfTracking, setup%numberOfParticles))
		allocate(particles%evapPercentage( setup%numHoursOfTracking, setup%numberOfParticles))    
		allocate(particles%hourOfBirth( setup%numberOfParticles))        
		particles%numOfExistingParticles = 0    
    endif
end subroutine allocateArrays
